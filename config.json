 {
  "useBackup": true,
  "geojsonFile": "Food_Hygiene_Ratings.geojson",
  "backupGeojsonFile": "Backup_Food_Hygiene_Ratings.geojson",
  "apiURL": "https://your-api-url.com/api",
  "defaultLocation": [51.4545, -2.5879],
  "enableGeolocation": true,
  "mapZoomLevel": 12,
  "mapTileLayer": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",

  "chatbotEnabled": true,
  "chatbotGreeting": "Hi there! How can I assist you?",
  "chatbotIcon": "https://cdn-icons-png.flaticon.com/128/10817/10817417.png",
  "chatbotAvatar": "https://cdn-icons-png.flaticon.com/512/4712/4712027.png",
  "enableChatbotMinimize": true,

  "chatbotLayout": {
    "position": {
      "bottom": "20px",
      "right": "20px"
    },
    "bubble": {
      "backgroundColor": "#4CAF50",
      "textColor": "#FFFFFF",
      "fontSize": "14px"
    },
    "avatar": {
      "size": "60px",
      "borderColor": "#4CAF50"
    },
    "animation": {
      "fadeIn": true,
      "delay": 500
    }
  },

  "chatbotButtons": {
    "width": "90%",
    "padding": "15px",
    "fontSize": "16px",
    "backgroundColor": "#2f6d60",
    "textColor": "#FFFFFF",
    "borderRadius": "5px"
  },

  "mapSettings": {
    "initialView": [51.4545, -2.5879],
    "zoomLevel": 12,
    "tileLayerURL": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
    "attribution": "Â© OpenStreetMap contributors"
  },

  "markerStyles": {
    "default": {
      "radius": 5,
      "fillColor": "#007bff",
      "color": "#007bff",
      "weight": 1,
      "opacity": 1,
      "fillOpacity": 0.8
    },
    "zeroRated": {
      "radius": 7,
      "fillColor": "#ff0000",
      "color": "#ff0000",
      "weight": 2,
      "opacity": 1,
      "fillOpacity": 0.9
    }
  },

  "popupSettings": {
    "template": "<b>Business Name:</b> {BUSINESS_NAME}<br><b>Address:</b> {ADDRESS}<br><b>Rating:</b> {RATING}<br><b>Rating Date:</b> {RATING_DATE}<br><img src='{RATING_GRAPHIC_URL}' alt='Rating Badge'>"
  },

  "filters": {
    "defaultFilters": {
      "rating": "",
      "location": "",
      "businessName": ""
    },
    "ratingOptions": {
      "5": "5 (Very Good)",
      "4": "4 (Good)",
      "3": "3 (Generally Satisfactory)",
      "2": "2 (Improvement Necessary)",
      "1": "1 (Major Improvement Necessary)",
      "0": "0 (Urgent Improvement Necessary)"
    }
  }
}
