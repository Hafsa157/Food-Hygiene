{
  "useBackup": true,
  "geojsonFile": "Food_Hygiene_Ratings.geojson",
  "backupGeojsonFile": "Backup_Food_Hygiene_Ratings.geojson",
  "apiURL": "https://your-api-url.com/api",
  "defaultLocation": [51.4545, -2.5879],
  "enableGeolocation": true,
  "mapZoomLevel": 12,
  "mapTileLayer": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",

  "chatbotEnabled": true,
  "chatbotGreeting": "Hi there, how can I help you?",
  "chatbotIcon": "https://cdn-icons-png.flaticon.com/128/10817/10817417.png",
  "chatbotAvatar": "https://cdn-icons-png.flaticon.com/512/4712/4712027.png",
  "enableChatbotMinimize": true,

  "chatbotUI": {
    "position": {
      "bottom": "20px",
      "right": "20px"
    },
    "bubble": {
      "backgroundColor": "#4CAF50",
      "textColor": "#FFFFFF",
      "fontSize": "16px",
      "borderRadius": "20px",
      "padding": "10px 15px",
      "marginRight": "15px"
    },
    "avatar": {
      "size": "60px",
      "borderColor": "#4CAF50",
      "borderRadius": "50%",
      "marginBottom": "-10px"
    },
    "animation": {
      "fadeIn": true,
      "delay": 500
    }
  },

  "chatbotButtons": {
    "width": "100%",
    "padding": "12px",
    "fontSize": "16px",
    "backgroundColor": "#2F7D68",
    "textColor": "#FFFFFF",
    "borderRadius": "5px"
  },

  "chatbotBehavior": {
    "autoShow": false,
    "closeOnOutsideClick": true,
    "keepSessionActive": true
  },

  "chatbotOptions": {
    "consumerOptions": [
      {
        "text": "Report a Food Safety Issue",
        "action": "showForm",
        "id": "food-safety",
        "isConsumer": true
      },
      {
        "text": "Report a Product Labelling Issue",
        "action": "showForm",
        "id": "product-labelling",
        "isConsumer": true
      },
      {
        "text": "Report an Unregistered Food Business",
        "action": "showForm",
        "id": "unregistered-business",
        "isConsumer": true
      },
      {
        "text": "Report a Problem with a Food Hygiene Rating",
        "action": "showForm",
        "id": "rating-problem",
        "isConsumer": true
      },
      {
        "text": "Whistleblowing and Reporting a Food Crime",
        "action": "showForm",
        "id": "whistleblowing",
        "isConsumer": true
      }
    ],
    "businessOptions": [
      {
        "text": "Report a Food Safety Incident",
        "action": "showForm",
        "id": "food-safety",
        "isConsumer": false
      },
      {
        "text": "Whistleblowing and Reporting a Food Crime",
        "action": "showForm",
        "id": "whistleblowing",
        "isConsumer": false
      },
      {
        "text": "Report a Problem with a Food Hygiene Rating",
        "action": "showForm",
        "id": "rating-problem",
        "isConsumer": false
      }
    ]
  },

  "defaultFilters": {
    "rating": null,
    "location": null,
    "businessName": null
  }
}
